	<build>
    <finalName>webclient</finalName>

	<plugins>
		<plugin>
			<groupId>org.apache.tomcat.maven</groupId>
			<artifactId>tomcat7-maven-plugin</artifactId> 	
			<version>2.2</version> 	
			<executions>
			<execution>
			<id>exec-undep</id>
			<goals><goal>undeploy</goal></goals>
			<phase>clean</phase>
			<configuration>
				<url>http://localhost:8080/manager/text</url>
				<server>TomcatServer</server>
				<path>/webclient</path>
			</configuration>
			</execution>
			<execution>
			<id>exec-dep</id>
			<goals><goal>deploy</goal></goals>
			<phase>package</phase>
			<configuration>
		 		<url>http://localhost:8080/manager/text</url> 		
				<server>TomcatServer</server> 		
				<path>/webclient</path> 	
			</configuration>
			</execution>
			</executions>
		</plugin>
	</plugins>
	</build>
 
